@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <h3 class="mt-4 mb-4">Total Expense: $@ViewBag.Expenses</h3>
    <table class="table mt-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>Value</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var expense in Model)
                {
                    <tr>
                        <td>@expense.Id</td>
                        <td>@expense.Value</td>
                        <td>@expense.Description</td>
                        <td>
                            <a asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                            <a asp-action="Delete" asp-route-id="@expense.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
